
 pipeline {
     agent any
     stages {
        stage('Checkout') {
           steps {
             // Clonar el repositorio desde Git
             checkout scm
           }
         }
         stage('changeDir') {
             steps {
                 sh 'cd crm_backend/ && pwd'               
             }
         }
         stage('Compile') {
             steps {                 
                 sh 'sbt'
             }
         }
         stage('RunApp') {
             steps {                 
                 sh 'sbt run'
             }
         }
     }
 }
